
<div>
  <p>dashboard</p>

  <section>
    {{#each model as |task|}}
      {{task-count-day task.sweat task.rest task.nutrition task.personalWellness}}
      <br>
    {{/each}}
  </section>

  <section>
    <p>total</p>
    {{#each model as |task|}}
      {{task-count-total task.sweat task.rest task.nutrition task.personalWellness}}
      <br>
    {{/each}}
  </section>

  <section>
    {{#each model as |task|}}
      <article class='list-task-per-day'>
        <h1>{{task.date}}</h1>
        {{#if task.sweat}}
          <p>sweat</p>
        {{/if}}
        {{#if task.rest}}
          <p>rest</p>
        {{/if}}
        {{#if task.nutrition}}
          <p>nutrition</p>
        {{/if}}
        {{#if task.personalWellness}}
          <p>personalWellness</p>
        {{/if}}
      </article>
    {{/each}}
  </section>
</div>

{{outlet}}
